<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summaryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_summary_card"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentValueLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/current_value"
            android:textColor="@color/black_shade"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_shade"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="₹27,893.65" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Total Investment Row -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTotalInvestmentLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_investment"
            android:textColor="@color/black_shade"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTotalInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_shade"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="₹28,590.71" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Today's P&L Row -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTodayPnLLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/today_s_profit_amp_loss"
            android:textColor="@color/black_shade"
            android:textSize="14sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTodayPnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_shade"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="-₹235.65" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_shade_7" />

    <!-- Collapsed Header (Expand/Collapse Row) -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/summaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProfitLossLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profit_amp_loss"
            android:textColor="@color/black_shade"
            android:textSize="15sp"
            android:textStyle="normal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivExpand"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_down_arrow"
            android:tint="@color/grey_shade_4" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvProfitLossValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/red_shade"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:text="-₹697.06 (2.44%)" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
